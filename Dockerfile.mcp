# Supacrawl MCP Server
#
# Build:
#   docker build -f Dockerfile.mcp -t supacrawl-mcp .
#
# Run:
#   docker run -p 5000:5000 supacrawl-mcp

FROM python:3.12-slim AS builder

WORKDIR /build

# Install build dependencies for Playwright
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Copy project files
COPY pyproject.toml README.md ./
COPY src/ ./src/

# Install supacrawl with MCP support and Playwright browsers
RUN pip install --no-cache-dir ".[mcp]" && \
    playwright install chromium --with-deps

# Runtime stage
FROM python:3.12-slim

LABEL org.opencontainers.image.source="https://github.com/poodle64/supacrawl"
LABEL org.opencontainers.image.description="Supacrawl MCP Server"
LABEL org.opencontainers.image.licenses="MIT"

WORKDIR /app

# Install Playwright runtime dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    libnss3 \
    libnspr4 \
    libatk1.0-0 \
    libatk-bridge2.0-0 \
    libcups2 \
    libdrm2 \
    libdbus-1-3 \
    libxkbcommon0 \
    libatspi2.0-0 \
    libxcomposite1 \
    libxdamage1 \
    libxfixes3 \
    libxrandr2 \
    libgbm1 \
    libasound2 \
    libpango-1.0-0 \
    libcairo2 \
    libfontconfig1 \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user
RUN useradd --uid 1000 --create-home --shell /bin/bash appuser

# Copy installed packages from builder
COPY --from=builder /usr/local/lib/python3.12/site-packages /usr/local/lib/python3.12/site-packages
COPY --from=builder /usr/local/bin /usr/local/bin

# Copy Playwright browsers to appuser's home
COPY --from=builder --chown=appuser:appuser /root/.cache/ms-playwright /home/appuser/.cache/ms-playwright

USER 1000:1000

ENV SUPACRAWL_HEADLESS=true \
    SUPACRAWL_LOG_LEVEL=INFO \
    SUPACRAWL_TIMEOUT=30000 \
    SUPACRAWL_SEARCH_PROVIDER=duckduckgo \
    HOME=/home/appuser

EXPOSE 5000

CMD ["supacrawl-mcp", "--transport", "http", "--host", "0.0.0.0", "--port", "5000"]
